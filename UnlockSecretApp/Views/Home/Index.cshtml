@{
    ViewData["Title"] = "Открой подарок";
}

<div class="text-center mt-5">
    <h2>Введите секретный код 💌</h2>
    <form method="post" asp-action="CheckCode" class="mt-3">
        <input type="password" name="code" maxlength="4" required class="form-control w-25 mx-auto text-center" />
        <button type="submit" class="btn btn-primary mt-3">Открыть 🎁</button>
    </form>
</div>

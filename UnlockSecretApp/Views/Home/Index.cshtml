 @page
@model Index
@{
    ViewData["Title"] = "Наши числа 💞";
}

<div class="container">
    <h2 class="title">Введи наши числа 💫</h2>

    <div id="inputs" class="code-container">
        <input maxlength="2" class="code-input" id="c1" />
        <input maxlength="2" class="code-input" id="c2" />
        <input maxlength="2" class="code-input" id="c3" />
        <input maxlength="2" class="code-input" id="c4" />
    </div>

    <button id="submitBtn" class="hidden">Продолжить</button>

    <div id="message" class="hidden"></div>
</div>

@section Scripts {
    <script>
        const inputs = document.querySelectorAll('.code-input');
        const submitBtn = document.getElementById('submitBtn');
        const message = document.getElementById('message');

        inputs.forEach((input, index) => {
            input.addEventListener('input', () => {
                if (input.value.length === 2 && index < inputs.length - 1) {
                    inputs[index + 1].focus();
                }
                checkAllFilled();
            });
        });

        function checkAllFilled() {
            const allFilled = Array.from(inputs).every(i => i.value.length === 2);
            if (allFilled) submitBtn.classList.remove('hidden');
            else submitBtn.classList.add('hidden');
        }

        submitBtn.addEventListener('click', () => {
            const codeValues = Array.from(inputs).map(i => i.value).join('-');
            const correctCode = "12-07-05-23";
            if (codeValues === correctCode) startMessageSequence();
            else alert("Хм... что-то не так 😅");
        });

        function startMessageSequence() {
            document.getElementById('inputs').classList.add('fade-out');
            submitBtn.classList.add('fade-out');
            setTimeout(() => {
                document.getElementById('inputs').style.display = 'none';
                submitBtn.style.display = 'none';
                showTypingText("На самом деле это не совсем рандомные числа, и сейчас ты поймёшь почему...");
            }, 1000);
        }

        function showTypingText(text) {
            message.classList.remove('hidden');
            let i = 0;
            const speed = 50;
            message.innerHTML = "";
            (function typeWriter() {
                if (i < text.length) {
                    message.innerHTML += text.charAt(i);
                    i++;
                    setTimeout(typeWriter, speed);
                } else {
                    setTimeout(() => showMoments(), 1500);
                }
            })();
        }

        function showMoments() {
            const texts = [
                "12 — день, когда мы впервые встретились 💕",
                "07 — дата, когда ты улыбнулась так, что я всё понял 😌",
                "05 — число, ставшее символом наших прогулок 🌙",
                "23 — то, что всегда будет значить 'мы' 💫"
            ];

            let i = 0;
            const interval = setInterval(() => {
                if (i < texts.length) {
                    const p = document.createElement('p');
                    p.textContent = texts[i];
                    p.classList.add('moment');
                    message.appendChild(p);
                    i++;
                } else clearInterval(interval);
            }, 2000);
        }
    </script>
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(135deg, #ffe0e9, #ffd6f6);
        overflow: hidden;
        margin: 0;
    }

    .container {
        text-align: center;
        transition: all 0.8s ease;
    }

    .title {
        color: #5a274e;
        margin-bottom: 25px;
    }

    .code-container {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-bottom: 20px;
    }

    .code-input {
        font-size: 1.5rem;
        width: 50px;
        text-align: center;
        border: none;
        border-radius: 10px;
        padding: 10px;
        background: #fff0f6;
        box-shadow: 0 0 8px rgba(255, 192, 203, 0.5);
        color: #5a274e;
    }

    button {
        padding: 10px 20px;
        border: none;
        border-radius: 15px;
        background-color: #ff85a1;
        color: white;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s;
    }

        button:hover {
            background-color: #ff6387;
        }

    .hidden {
        display: none;
    }

    .fade-out {
        opacity: 0;
        transform: scale(0.95);
        transition: all 0.8s ease;
    }

    #message {
        margin-top: 25px;
        font-size: 1.2rem;
        color: #5a274e;
        line-height: 1.6;
        max-width: 350px;
        margin-left: auto;
        margin-right: auto;
        white-space: pre-wrap;
    }

    .moment {
        margin-top: 10px;
        opacity: 0;
        animation: fadeIn 600ms ease forwards;
    }

    @@keyframes fadeIn {
        from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>


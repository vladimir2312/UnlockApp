@{
    ViewData["Title"] = "Открой подарок";
}

<!-- Подключение Bootstrap CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #ffe6f0);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .gift-card {
        background-color: #fff;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        text-align: center;
        max-width: 400px;
        width: 90%;
    }

    h2 {
        color: #d63384;
    }

    input.form-control {
        font-size: 1.5rem;
        letter-spacing: 0.2rem;
    }

    button.btn-primary {
        background-color: #d63384;
        border-color: #d63384;
    }

    button.btn-primary:hover {
        background-color: #c11271;
        border-color: #c11271;
    }
</style>

<div class="gift-card">
    <h2>Введите секретный код 💌</h2>
    <form method="post" asp-action="CheckCode" class="mt-4">
        <input type="password" name="code" maxlength="4" required class="form-control text-center" placeholder="••••" />
        <button type="submit" class="btn btn-primary mt-4 w-100">Открыть 🎁</button>
    </form>
</div>

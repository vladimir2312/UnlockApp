@{
    Layout = null;
}
<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    <title>💖 MiniApp — Ввод кода</title>

    <meta name="theme-color" content="#ffffff">
    <meta http-equiv="ScreenOrientation" content="autoRotate:disabled">
    <meta name="telegram-enable-debug" content="true">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/main.css" />
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Pacifico', cursive,'Segoe UI', system-ui,-apple-system, sans-serif;
        }

        html, body {
            height: 100dvh;
            min-height: 100dvh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            background: linear-gradient(160deg,#f7fbff 0%,#fef7fb 50%,#f3f9ff 100%);
            color: #7c2a8d;
        }

        .background {
            position: fixed;
            inset: 0;
            background: url('/images/background.jpg') center/cover no-repeat;
            filter: blur(12px) brightness(0.7);
            z-index: 0;
        }

        #container, .overlay {
            position: relative;
            z-index: 1;
        }

        .overlay {
            position: fixed;
            inset: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(15px);
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.5s ease, transform 0.5s ease;
            transform: scale(0.95);
        }

            .overlay.show {
                opacity: 1;
                pointer-events: all;
                transform: scale(1);
            }

            .overlay.hidden {
                display: none;
            }

        #container {
            position: relative;
            width: 92%;
            max-width: 420px;
            padding: 2rem;
            border-radius: 20px;
            background: rgba(255,255,255,0.55);
            border: 1px solid rgba(255,255,255,0.35);
            box-shadow: 0 6px 20px rgba(0,0,0,0.08);
            text-align: center;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .title {
            font-size: 2.2rem;
            color: #7c2a8d;
        }

        .inputs {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        input.code {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            border: 1px solid rgba(180,180,200,0.4);
            background: rgba(255,245,255,0.8);
            font-size: 1.5rem;
            font-weight: 700;
            text-align: center;
            color: #7c2a8d;
        }

            input.code:focus {
                outline: none;
                border-color: rgba(200,120,255,0.9);
                background: rgba(255,240,250,0.9);
            }

        /* ===== Китёнок и свайп ===== */
        #kitten {
            width: 150px;
            height: 60px;
            margin: 0.6rem auto;
            border-radius: 36px;
            background: rgba(255,255,255,0.35);
            border: 1px solid rgba(255,255,255,0.35);
            box-shadow: 0 6px 20px rgba(0,0,0,0.08);
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
            cursor: pointer;
            transition: box-shadow 0.3s ease;
        }

            #kitten:hover {
                box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            }

            #kitten .swipe-bar {
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                width: 0%;
                background: linear-gradient(90deg, rgba(255,200,235,0.4), rgba(200,180,255,0.4));
                border-radius: 36px;
                transition: width 0.1s;
            }

            #kitten .kitten-inner {
                font-size: 2.2rem;
                color: #ff6fa3;
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
                transition: left 0.1s ease-out;
            }

            #kitten .arrow {
                position: absolute;
                right: 10px;
                top: 50%;
                transform: translateY(-50%);
                font-size: 1.5rem;
                color: rgba(124,42,141,0.5);
                animation: pulse 1.2s infinite;
            }
       

        #message {
            font-size: 1rem;
            color: rgba(124,42,141,0.8);
            min-height: 1.2rem;
        }

        .congrats-card {
            width: min(92%,640px);
            padding: 2rem;
            border-radius: 18px;
            background: rgba(255,255,255,0.65);
            border: 1px solid rgba(255,255,255,0.35);
            box-shadow: 0 12px 40px rgba(0,0,0,0.12);
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        .congrats-title {
            font-size: 2rem;
            font-weight: 800;
            color: #7c2a8d;
        }

        .btn, .btn-next {
            margin-top: 10px;
            padding: 0.7rem 1.2rem;
            border-radius: 12px;
            background: linear-gradient(180deg,#ffe0f0 0%,#fff0ff 100%);
            border: 1px solid rgba(200,120,255,0.2);
            box-shadow: 0 6px 18px rgba(0,0,0,0.06);
            font-weight: 700;
            color: #7c2a8d;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

            .btn-next:hover {
                transform: scale(1.05);
            }
    </style>
</head>

<body>
    <div class="background"></div>

    <main id="container">
        <h1 class="title">Введи секретный 4-значный код</h1>

        <div class="inputs" aria-label="Код">
            <input inputmode="numeric" maxlength="2" class="code" value="00" />
            <input inputmode="numeric" maxlength="2" class="code" value="00" />
            <input inputmode="numeric" maxlength="2" class="code" value="00" />
            <input inputmode="numeric" maxlength="2" class="code" value="00" />
        </div>

        <div id="kitten" title="Свайпни вправо">
            <div id="glowTrail"></div>
            <div id="kittenFill" class="fill"></div>
            <div class="kitten-inner">🐳</div>
        </div>



        <div id="message">Свайпни китёнка вправо, чтобы увидеть сюрприз</div>
    </main>

    <div id="loaderOverlay" class="overlay hidden">
        <div class="congrats-card glass">
            <div class="loading-text">Loading...</div>
        </div>
    </div>

    <!-- Поздравительные страницы -->
    <div id="page1" class="overlay hidden">
        <div class="congrats-card glass">
            <h2 class="congrats-title">С днём рождения 💖</h2>
            <pre id="typedText"><span id="typedCursor"></span></pre>
            <button class="btn-next" id="next1">Далее ➡️</button>
        </div>
    </div>
    <div id="page2" class="overlay hidden">
        <div class="congrats-card glass">
            <h2>🌸 Продолжение!</h2>
            <p></p>
            <button class="btn-next" id="next2">Далее ➡️</button>
        </div>
    </div>
    <div id="page3" class="overlay hidden">
        <div class="congrats-card glass">
            <h2>Продолжение</h2>
            <p></p>
            <button class="btn-next" id="next3">Далее ➡️</button>
        </div>
    </div>
    <div id="page4" class="overlay hidden">
        <div class="congrats-card glass">
            <h2>Продолжение</h2>
            <p></p>
        </div>
    </div>

    <script>
                     +

        (() => {
            const inputs = [...document.querySelectorAll('.code')];
            const kitten = document.getElementById('kitten');
            const swipeBar = kitten.querySelector('.swipe-bar');
            const kittenInner = kitten.querySelector('.kitten-inner');
            const message = document.getElementById('message');
            const correctCode = ['00','00','00','00'];

            // ----------- INPUT CODE HANDLING -------------
            inputs.forEach((inp, i) => {
                inp.addEventListener('focus', () => {
                    if (inp.value === '00') inp.value = '';
                });

                inp.addEventListener('blur', () => {
                    if (inp.value === '') inp.value = '00';
                });

                inp.addEventListener('input', e => {
                    e.target.value = e.target.value.replace(/\D/g, '').slice(0, 2);

                    if (e.target.value.length === 2 && i < inputs.length - 1)
                        inputs[i + 1].focus();
                });
            });


            // ----------- SWIPE + BOUNCE ANIMATION -------------

            let startX = 0;
            let isSwiping = false;

            kitten.addEventListener('pointerdown', e => {
                startX = e.clientX;
                isSwiping = true;
                kitten.setPointerCapture(e.pointerId);
            });

                   kitten.addEventListener('pointermove', e => {
            if (!isSwiping) return;

            const dx = Math.max(0, e.clientX - startX);
            const progress = Math.min(dx / 1.5, 150);

            // заполнение полосы
            swipeBar.style.width = progress * 0.7 + '%';

            // движение китёнка
            kittenInner.style.left = progress + 'px';

            // glow-хвост
            const glow = document.getElementById('glowTrail');
            glow.style.width = progress + 20 + 'px';
            glow.style.opacity = progress > 10 ? 1 : 0;
        });


            kitten.addEventListener('pointerup', e => {
                if (!isSwiping) return;
                isSwiping = false;

                const dx = e.clientX - startX;

                // --- УСПЕШНЫЙ СВАЙП ---
                if (dx > 100) {
                    const userCode = inputs.map(inp => inp.value.padStart(2, '0'));

                    if (!userCode.every((v, i) => v === correctCode[i])) {
                        wrongCodeAnimation();
                        return;
                    }

                    correctSwipeBounce();
                    return;
                }

                // если недотянул — откат назад
                resetSwipe();
            });

            // ----------- ANIMATIONS -----------

            function correctSwipeBounce() {
                // bounce-animation
                kittenInner.animate([
                    { transform: `translateY(-50%) translateX(150px)` },
                    { transform: `translateY(-60%) translateX(150px)` },
                    { transform: `translateY(-50%) translateX(150px)` }
                ], {
                    duration: 450,
                    easing: "cubic-bezier(.34,1.56,.64,1)" // bounce
                });

                swipeBar.animate([
                    { width: "70%" },
                    { width: "72%" },
                    { width: "70%" }
                ], { duration: 300, easing: "ease-out" });

                setTimeout(() => {
                    inputs.forEach(inp => inp.blur());
                    document.getElementById('container').classList.add('fade-out-scale');
                    setTimeout(() => showPage('page1'), 300);
                }, 300);
            }


            function wrongCodeAnimation() {
                message.textContent = 'Неверный код! Попробуй ещё 🌸';

                // shake_animation
                kitten.animate([
                    { transform: 'translateX(0)' },
                    { transform: 'translateX(-6px)' },
                    { transform: 'translateX(6px)' },
                    { transform: 'translateX(0)' }
                ], { duration: 250, easing: "ease-in-out" });

                resetSwipe();
            }

            function resetSwipe() {
                swipeBar.style.width = "0%";
                kittenInner.style.left = "10px";
            }

            // ----------- PAGE HANDLING -----------
            function showPage(pageId) {
                const pages = ['page1', 'page2', 'page3', 'page4'];

                pages.forEach(id => {
                    const el = document.getElementById(id);

                    if (id === pageId) {
                        el.classList.remove("hidden");
                        setTimeout(() => el.classList.add("show"), 30);
                    } else {
                        el.classList.remove("show");
                        setTimeout(() => el.classList.add("hidden"), 300);
                    }
                });
            }

            document.getElementById("next1").onclick = () => showPage("page2");
            document.getElementById("next2").onclick = () => showPage("page3");
            document.getElementById("next3").onclick = () => showPage("page4");

            // auto-focus first input
            inputs[0].focus();
    


        })();
    </script>
</body>
</html>

